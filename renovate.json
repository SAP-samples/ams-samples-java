{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [ "config:base" ],
  "baseBranches": ["dev"],
  "packageRules": [
    {
      "matchManagers": [ "maven" ],
      "registryUrls": [ "https://int.repositories.cloud.sap/artifactory/build-milestones" ]
    },
    {
      "datasources": ["npm"],
      "registryUrls": ["https://int.repositories.cloud.sap/artifactory/api/npm/build-releases-npm/"]
    }, 
    {
      "description": "Automatically merge updates",
      "matchUpdateTypes": ["major", "minor", "digest", "patch"],
      "automerge": true,
      "rebaseWhen": "conflicted"
    }
  ],
  "prConcurrentLimit": 3
}
